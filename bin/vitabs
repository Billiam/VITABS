import sys
import curses

from vitabs.editor import Editor
import vitabs.commands

def ncmain(stdscr):
	ed = Editor(stdscr)

	ed.input_handlers = [vitabs.commands.builtin_handler]
	#vitabs.commands.map_commands(ed)
	if len(sys.argv) > 1:
		ed.load_tablature(sys.argv[1])
		ed.stdscr.clear()
		ed.redraw_view()
		ed.move_cursor()
	ed.normal_mode()

curses.wrapper(ncmain)

